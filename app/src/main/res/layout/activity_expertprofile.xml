<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    





        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:title="Profile"

                android:background="@color/white"
                app:navigationIcon="@drawable/baseline_arrow_back_24" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:paddingBottom="80dp"
        android:fillViewport="true"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tv"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ExpertprofileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_expertpic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/docpic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clinicimage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_home_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_about" />

        <TextView
            android:id="@+id/clinicaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Clinic Address"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/clinicimage"
            app:layout_constraintStart_toEndOf="@+id/clinicimage"
            app:layout_constraintTop_toTopOf="@+id/clinicimage" />

        <ImageButton
            android:id="@+id/btn_visit"
            android:layout_width="16dp"
            android:layout_height="16dp"

            android:src="@drawable/baseline_near_me_24"
            android:background="@color/white"

            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/clinicaddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clinicaddress" />

        <TextView
            android:id="@+id/tv_clinicaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="2dp"

            android:text="Teen Murti House, Teen Murti Marg, Teen Murti Marg Area, New Delhi, Delhi 110011"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clinicaddress" />
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"

        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_contactless_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <ImageView
            android:id="@+id/personimage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"

            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_person_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Age"
            android:visibility="gone"

            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/personimage"
            app:layout_constraintStart_toEndOf="@+id/personimage"
            app:layout_constraintTop_toTopOf="@+id/personimage" />

        <TextView
            android:id="@+id/tv_expertage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 years old"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="@+id/age"
            app:layout_constraintStart_toStartOf="@+id/tv_language"
            app:layout_constraintTop_toTopOf="@+id/age"
            />


        <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:srcCompat="@drawable/baseline_group_24" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Mode"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text="Delhi | Video Call"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="@+id/textView12" />

        <TextView
            android:id="@+id/tv_extrainfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It's a online audio call session"
            android:textSize="11sp"
            android:visibility="gone"

            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/modetextview_bg"
            android:layout_marginEnd="15dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_mode"
            app:layout_constraintBottom_toBottomOf="@id/tv_mode"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Language"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />




        <ImageView
        android:id="@+id/imageView9"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personimage"
        app:srcCompat="@drawable/baseline_info_24" />

    <TextView
        android:id="@+id/textVieww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="About"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.0" />




    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hindi, English"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/tv_mode"
        app:layout_constraintTop_toTopOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.0" />


        <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="2dp"

        android:justificationMode="inter_word"
        android:text="Checking the network cables, modem, and router Reconnecting to Wi-Fi Running Windows Network Diagnostics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVieww" />


    <TextView
        android:id="@+id/tv_expertname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Vijay Joshi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/iv_expertpic"
        app:layout_constraintStart_toStartOf="@+id/iv_expertpic"
        app:layout_constraintTop_toBottomOf="@+id/iv_expertpic" />

    <TextView
        android:id="@+id/tv_expertdesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/psychologist"
        app:layout_constraintEnd_toEndOf="@+id/tv_expertname"
        app:layout_constraintStart_toStartOf="@+id/tv_expertname"
        app:layout_constraintTop_toBottomOf="@+id/tv_expertname" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Experience"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/tv_expertexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 years"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintStart_toStartOf="@+id/tv_mode"
        app:layout_constraintTop_toTopOf="@+id/textView21" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_expertdesign"
        app:srcCompat="@drawable/baseline_work_24" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_expertpic">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ratings"
            app:layout_constraintEnd_toStartOf="@+id/tv_ratings"
            app:layout_constraintTop_toTopOf="@+id/tv_ratings"
            app:srcCompat="@drawable/baseline_star_24" />


        <TextView
            android:id="@+id/tv_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:text="4.4"
android:layout_gravity="end"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_designation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_expertname" />


    </LinearLayout>

        <TextView
            android:id="@+id/tv_noofrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(350)"

            android:layout_marginStart="20dp"
            android:textSize="9sp"
            app:layout_constraintStart_toStartOf="@id/linearlayout"
            app:layout_constraintEnd_toEndOf="@id/linearlayout"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout" />





</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:layout_gravity="bottom">

        <!-- Top Divider -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:backgroundTint="#E0E0E0"
            />

        <!-- Horizontal Row for Price and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_eventcharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1500"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000" />
            <TextView
                android:id="@+id/tv_sessiontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="| 20 min"

                android:layout_weight="1"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_charge"
                app:layout_constraintStart_toEndOf="@id/tv_charge"
                app:layout_constraintTop_toTopOf="@+id/tv_charge" />
            <Button
                android:id="@+id/btn_booknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book"
                android:backgroundTint="@color/lykablue"
                android:textColor="#FFFFFF"
                android:paddingStart="50dp"
                android:paddingEnd="50dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

